@*div body*@


@Html.Action("sliderpartial", "Sach")

<div class="col-lg-12">
    <div class="iq-card iq-card-block iq-card-stretch iq-card-height">

        <div class="iq-card-body">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-sm-6 col-md-4 col-lg-3">
                        <div class="iq-card iq-card-block iq-card-stretch iq-card-height browse-bookcontent">
                            <div class="iq-card-body p-0">
                                <div class="d-flex align-items-center">
                                    <div class="col-6 p-0 position-relative image-overlap-shadow">
                                        <a href="javascript:void();"><img class="img-fluid rounded w-100" src="@Url.Content("~/Hinhanhsanpham/" + item.AnhBia)" alt=""></a>
                                        <div class="view-book">
                                            <a href="@Url.Action("xemchitiet", "Sach", new { item.MaSach })" class="btn btn-sm btn-white">Mua Ngay</a>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="mb-2">
                                            <h6 class="mb-1">@item.TenSach</h6>
                                            <p class="font-size-13 line-height mb-1">@item.TacGia.TenTacGia</p>
                                            <div class="d-block line-height">
                                                <span class="font-size-11 text-warning">
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="price d-flex align-items-center">
                                            <h6>
                                                <b>
                                                    @{string formattedPrice = string.Format("{0:#,##0}đ", (decimal)@item.GiaBan);}@formattedPrice

                                                </b>
                                            </h6>
                                        </div>
                                        <div class="iq-product-action">
                                            <a href="@Url.Action("AddToCart", "GioHang", new {@MaSach = item.MaSach  })"><i class="fa fa-cart-plus" aria-hidden="true"></i></a>
                                            <a href="" class="ml-2"><i class="ri-heart-fill text-danger"></i>@item.YeuThich</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>


        </div>
        <div class="pagination justify-content-end">
            <a href="#"></a>
            @Html.PagedListPager(Model, page => Url.Action("Index", "Home", new { page = page }))

        </div>
        <style>


            .pagination a {
                color: black;
                float: left;
                padding: 8px 16px;
                text-decoration: none;
                transition: background-color .3s;
            }

            .pagination li.active {
                background: #15f5d5 !important;
            }
        </style>
    </div>

</div>

