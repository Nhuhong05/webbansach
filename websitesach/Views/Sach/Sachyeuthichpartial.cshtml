
@using websitesach.Models;
@*định nghĩa kiểu dữ liệu cho biến model*@
@model List<Sach>

<div class="col-lg-12">
    <div class="iq-card iq-card-block iq-card-stretch iq-card-height">
        <div class="iq-card-header d-flex justify-content-between align-items-center position-relative">
            <div class="iq-header-title">
                <h4 class="card-title mb-0">Sách yêu thích</h4>
            </div>
            <div class="iq-card-header-toolbar d-flex align-items-center">
                <a href="@Url.Action("SachYeuThich", "Sach")" class="btn btn-sm btn-primary view-more">Xem thêm</a>
            </div>
        </div>
        <div class="iq-card-body favorites-contens">
            <ul id="favorites-slider" class="list-inline p-0 mb-0 row">
                @{
                    foreach (var item in Model)

                    {

                        <li class="col-md-4">
                            <div class="d-flex align-items-center">
                                <div class="col-5 p-0 position-relative">
                                    <a href="javascript:void();">
                                        <img src="@Url.Content("~/Hinhanhsanpham/" + item.AnhBia)" class="img-fluid rounded w-100" alt="">

                                    </a>
                                </div>
                                <div class="col-7">
                                    <h5 class="mb-2">@item.TenSach</h5>
                                    <p class="mb-2">Tác Giả : @item.TacGia.TenTacGia</p>
                                    <div class="d-flex justify-content-between align-items-center text-dark font-size-13">
                                        <span>Đã bán</span>
                                        <span class="mr-4"> @item.SLdaban</span>
                                    </div>
                                    <div class="iq-progress-bar-linear d-inline-block w-100">
                                        <div class="iq-progress-bar iq-bg-primary">
                                            <span class="bg-primary" data-percent="65"></span>
                                        </div>
                                    </div>
                                    <a href="@Url.Action("xemchitiet", "Sach", new { item.MaSach })" class="text-dark">Đọc ngay<i class="ri-arrow-right-s-line"></i></a>
                                </div>
                            </div>
                        </li>


                    }
                }
            </ul>

        </div>
    </div>
</div>






