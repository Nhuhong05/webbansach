@model IEnumerable<websitesach.Models.ChuDe>

@{
    ViewBag.Title = "ChuDe";
    Layout = "~/Views/layout/AdminLayout.cshtml";
}

    <div id="content-page" class="content-page">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="iq-card">
                        <div class="iq-card-header d-flex justify-content-between">
                            <div class="iq-header-title">
                                <h4 class="card-title">Danh sách danh mục</h4>
                            </div>
                            <div class="iq-card-header-toolbar d-flex align-items-center">
                                <a href="@Url.Action("ThemMoi", "QuanliSP")" class="btn btn-primary">Thêm danh mục mới</a>
                            </div>
                        </div>
                        <div class="iq-card-body">
                            <div class="table-responsive">
                                <table class="data-tables table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th width="10%">@Html.DisplayNameFor(model => model.MaChuDe)</th>
                                            <th width="50%">@Html.DisplayNameFor(model => model.TenChuDe)</th>
                                            <th width="10%">Hoạt động</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.MaChuDe)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.TenChuDe)

                                                </td>
                                                <td>
                                                    <div class="flex align-items-center list-user-action">
                                                        <a class="bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Sửa" href="@Url.Action("SuaChuDe", "QuanliSP", new {@MaChuDe = item.MaChuDe})"><i class="ri-pencil-line"></i></a>
                                                        <a class="bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Xoá" href="@Url.Action("XoaChuDe", "QuanliSP", new {@MaChuDe = item.MaChuDe})"><i class="ri-delete-bin-line"></i></a>
                                                    </div>
                                                </td>
                                            </tr>

                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



