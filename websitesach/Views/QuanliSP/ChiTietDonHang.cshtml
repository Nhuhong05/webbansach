@model IEnumerable<websitesach.Models.ChiTietDonHang>

@{
    ViewBag.Title = "ChiTietDonHang";
    Layout = "~/Views/layout/AdminLayout.cshtml";
}

    <div id="content-page" class="content-page">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="iq-card">
                        <div class="iq-card-header d-flex justify-content-between">
                            <div class="iq-header-title">
                                <h4 class="card-title">Đơn Hàng</h4>
                            </div>
                            <div class="iq-card-header-toolbar d-flex align-items-center">
                                <a href="admin-add-book.html" class="btn btn-primary">Thêm Mói</a>
                            </div>
                        </div>
                        <div class="iq-card-body">
                            <div class="table-responsive">
                                <table class="data-tables table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th width="15%">@Html.DisplayNameFor(model => model.DonHang.MaDonHang)</th>
                                            <th width="15%">@Html.DisplayNameFor(model => model.DonHang.KhachHang.TenTaiKhoan)</th>
                                            <th width="15%">@Html.DisplayNameFor(model => model.Sach.TenSach)</th>
                                            <th width="15%">@Html.DisplayNameFor(model => model.SoLuong)</th>
                                            <th width="15%"> @Html.DisplayNameFor(model => model.DonHang.NgayDat)</th>

                                            <th width="15%">@Html.DisplayNameFor(model => model.DonHang.NgayGiao)</th>
                                            <th width="15%">@Html.DisplayNameFor(model => model.DonGia)</th>
                                            <th width="15%">@Html.DisplayNameFor(model => model.DonHang.PhuongThucThanhToan)</th>
                                            <th width="15%">@Html.DisplayNameFor(model => model.DonHang.TinhTrangGiaoHang)</th>

                                            <th width="15%">Hoạt động</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.DonHang.MaDonHang)</td>
                                                <td>@Html.DisplayFor(modelItem => item.DonHang.KhachHang.TenTaiKhoan)</td>
                                                <td>@Html.DisplayFor(modelItem => item.Sach.TenSach)</td>
                                                <td>@Html.DisplayFor(modelItem => item.SoLuong)</td>
                                                <td>@Html.DisplayFor(modelItem => item.DonHang.NgayDat)</td>
                                                <td>@Html.DisplayFor(modelItem => item.DonHang.NgayGiao)</td>
                                                <td>@Html.DisplayFor(modelItem => item.DonGia)</td>
                                                <td>@Html.DisplayFor(modelItem => item.DonHang.PhuongThucThanhToan)</td>
                                                <td>@Html.DisplayFor(modelItem => item.DonHang.TinhTrangGiaoHang)</td>

                                                <td>
                                                    <div class="flex align-items-center list-user-action">
                                                        <a class="bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit" href="admin-add-book.html"><i class="ri-pencil-line"></i></a>
                                                        <a class="bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Xoá" href="#"><i class="ri-delete-bin-line"></i></a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


