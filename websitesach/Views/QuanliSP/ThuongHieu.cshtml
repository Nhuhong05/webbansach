@model IEnumerable<websitesach.Models.ThuongHieu>

@{
    ViewBag.Title = "ThuongHieu";
    Layout = "~/Views/layout/AdminLayout.cshtml";
}

@*@Html.ActionLink("Edit", "Edit", new { id = item.MaThuongHieu }) |
    @Html.ActionLink("Details", "Details", new { id = item.MaThuongHieu }) |
    @Html.ActionLink("Delete", "Delete", new { id = item.MaThuongHieu })*@

    <div id="content-page" class="content-page">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="iq-card">
                        <div class="iq-card-header d-flex justify-content-between">
                            <div class="iq-header-title">
                                <h4 class="card-title">Danh sách Thương Hiệu</h4>
                            </div>
                            <div class="iq-card-header-toolbar d-flex align-items-center">
                                <a href="admin-add-category.html" class="btn btn-primary">Thêm mới</a>
                            </div>
                        </div>
                        <div class="iq-card-body">
                            <div class="table-responsive">
                                <table class="data-tables table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th width="10%">@Html.DisplayNameFor(model => model.MaThuongHieu)</th>
                                            <th width="50%">@Html.DisplayNameFor(model => model.TenThuongHieu)</th>
                                            <th width="70%">Hoạt động</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.MaThuongHieu)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.TenThuongHieu)

                                                </td>
                                                <td>
                                                    <div class="flex align-items-center list-user-action">
                                                        <a class="bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Sửa" href="admin-add-category.html"><i class="ri-pencil-line"></i></a>
                                                        <a class="bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Xoá" href="#"><i class="ri-delete-bin-line"></i></a>
                                                    </div>
                                                </td>
                                            </tr>

                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




