@using websitesach.Models;
@using PagedList.Mvc;
@using PagedList;
@model PagedList.PagedList<websitesach.Models.DonHang>

@{
    ViewBag.Title = "DonHang";
    Layout = "~/Views/layout/AdminLayout.cshtml";
}


<div id="content-page" class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="iq-card">
                    <div class="iq-card-header d-flex justify-content-between">
                        <div class="iq-header-title">
                            <h4 class="card-title">Danh sách Đơn Hàng</h4>
                        </div>
                        <div class="iq-card-header-toolbar d-flex align-items-center">
                            <a href="@Url.Action("ThemMoiDH", "QuanliSP")" class="btn btn-primary">Thêm Khách Hàng Mới</a>
                        </div>
                    </div>
                    <div class="iq-card-body">
                        <div class="table-responsive">
                            <table class="data-tables table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.First().MaDonHang)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.First().KhachHang.TenTaiKhoan)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.First().Sach.TenSach)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.First().PhuongThucThanhToan)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.First().TinhTrangGiaoHang)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.First().NgayDat)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.First().NgayGiao)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.First().SoLuong)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.First().DonGia)
                                        </th>


                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MaDonHang)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.KhachHang.TenTaiKhoan)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Sach.TenSach)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PhuongThucThanhToan)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TinhTrangGiaoHang)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NgayDat)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NgayGiao)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SoLuong)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DonGia)
                                            </td>


                                            <td>
                                                <div class="flex align-items-center list-user-action">
                                                    <a class="bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Sửa" href="@Url.Action("SuaDH", "QuanliSP", new {@MaDonHang = item.MaDonHang})"><i class="ri-pencil-line"></i></a>
                                                    <a class="bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Xoá" href="@Url.Action("XoaDH", "QuanliSP", new {@MaDonHang = item.MaDonHang})"><i class="ri-delete-bin-line"></i></a>
                                                </div>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="pagination justify-content-end">
    <a href="#"></a>
    @Html.PagedListPager(Model, page => Url.Action("DonHang", "QuanliSP", new { page = page }))
</div>
<style>


    .pagination a {
        color: black;
        float: left;
        padding: 8px 16px;
        text-decoration: none;
        transition: background-color .3s;
    }

    .pagination li.active {
        background: #15f5d5 !important;
    }
</style>

